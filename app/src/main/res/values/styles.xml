<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/main_color</item>
    <item name="colorPrimaryDark">@color/main_color</item>
    <item name="colorAccent">@color/main_color</item>
  </style>

  <style name="text_style_small" parent="SimpleActivityTheme">
    <item name="iTextSize">@dimen/font_small</item>
    <item name="iTitleSize">@dimen/font_title_small</item>
  </style>

  <style name="text_style_normal" parent="SimpleActivityTheme">
    <item name="iTextSize">@dimen/font_main</item>
    <item name="iTitleSize">@dimen/font_title_middle</item>
  </style>

  <style name="text_style_big" parent="SimpleActivityTheme">
    <item name="iTextSize">@dimen/font_big</item>
    <item name="iTitleSize">@dimen/font_title_big</item>
  </style>

  <style name="SimpleActivityTheme" parent="AppTheme">
    <item name="android:exported">false</item>
    <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
  </style>

  <style name="SplashActivityTheme" parent="SimpleActivityTheme">
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowFrame">@null</item>
  </style>

  <style name="ThemeDialog" parent="android:Theme.Dialog">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowActionBarOverlay">false</item>
    <item name="android:textColor">@color/one_text_color</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@android:color/transparent</item> <!--不加这行宽度不能占全屏-->
  </style>

  <style name="ThemeDialog.BottomWithAnim" parent="ThemeDialog">
    <item name="android:windowAnimationStyle">@style/AnimBottom</item>
  </style>

</resources>
