<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

  <style name="expanded_title">
    <item name="android:textSize">0sp</item>
  </style>

  <style name="toolbar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:background">@drawable/selector_titlebar_btn_bg</item>
  </style>

  <style name="style_recycler_view">
    <item name="android:overScrollMode">never</item>
    <item name="android:background">@color/white</item>
  </style>

  <!-- 关注关系 新增 红点提醒 字体 -->
  <style name="wpk_text_person_red_notification">
    <item name="android:maxLines">1</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/shape_red_point_twenty_dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">@dimen/font_tiny</item>
  </style>

  <style name="user_item_setting_vg">
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/padding_normal</item>
    <item name="android:clickable">true</item>
    <item name="android:descendantFocusability">blocksDescendants</item>
  </style>

  <style name="style_common_edit_text">
    <item name="android:textColor">@color/one_text_color</item>
    <item name="android:textColorHint">@color/three_text_color</item>
    <item name="android:textSize">@dimen/font_main</item>
    <item name="android:paddingLeft">@dimen/input_text_padding</item>
    <item name="android:paddingRight">@dimen/input_text_padding</item>
  </style>

  <!--<item name="tl_indicator_width">@dimen/padding_normal</item>-->
  <style name="tab_indicator">
    <item name="tl_indicator_color">@color/main_color</item>
    <item name="tl_indicator_corner_radius">3dp</item>
    <item name="tl_indicator_height">2dp</item>
    <item name="tl_indicator_margin_bottom">4dp</item>
    <item name="tl_indicator_width_equal_title">true</item>
    <item name="tl_tab_padding">@dimen/padding_small</item>
    <!--<item name="tl_tab_space_equal">true</item>-->
    <item name="tl_textBold">SELECT</item>
    <item name="tl_textSelectColor">@color/main_color</item>
    <item name="tl_textUnselectColor">@color/three_text_color</item>
    <item name="tl_textsize">@dimen/font_main</item>
  </style>

  <style name="list_bottom_widget">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/three_text_color</item>
    <item name="android:textSize">@dimen/font_small</item>
  </style>
</resources>