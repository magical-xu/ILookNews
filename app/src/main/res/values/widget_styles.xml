<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="style_recycler_view">
    <item name="android:overScrollMode">never</item>
    <item name="android:background">@color/white</item>
  </style>

  <!-- 关注关系 新增 红点提醒 字体 -->
  <style name="wpk_text_person_red_notification">
    <item name="android:maxLines">1</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/shape_red_point_twenty_dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">@dimen/font_tiny</item>
  </style>

  <style name="user_item_setting_vg">
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/padding_normal</item>
    <item name="android:clickable">true</item>
    <item name="android:descendantFocusability">blocksDescendants</item>
  </style>
</resources>