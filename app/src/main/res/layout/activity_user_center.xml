<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <android.support.design.widget.AppBarLayout
      android:id="@+id/layout_appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_behavior="com.chaoneng.ilooknews.widget.FlingBehavior">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:collapsedTitleTextAppearance="@style/expanded_title"
        app:contentScrim="@color/white"
        app:expandedTitleTextAppearance="@style/expanded_title"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:scrimAnimationDuration="100">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:background="@color/alpha_70_black">

          <com.chaoneng.ilooknews.widget.image.HeadImageView
              android:id="@+id/iv_avatar"
              android:layout_width="64dp"
              android:layout_height="64dp"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="20dp"
              android:layout_marginLeft="20dp"
              tools:src="@drawable/default_head" />

          <TextView
              android:id="@+id/tv_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignTop="@id/iv_avatar"
              android:layout_marginLeft="@dimen/padding_normal"
              android:layout_toRightOf="@id/iv_avatar"
              android:textColor="@color/white"
              android:textSize="@dimen/font_main"
              tools:text="@string/test_text_short" />

          <!--<LinearLayout-->
          <!--android:layout_width="wrap_content"-->
          <!--android:layout_height="wrap_content"-->
          <!--android:layout_alignBottom="@id/iv_avatar"-->
          <!--android:layout_alignLeft="@id/tv_name">-->

          <!--<com.chaoneng.ilooknews.app.ui.widget.DoubleTextView-->
          <!--android:id="@+id/tv_credit_focus"-->
          <!--android:layout_width="wrap_content"-->
          <!--android:layout_height="wrap_content"-->
          <!--android:layout_marginRight="@dimen/padding_small"-->
          <!--app:above_text="0"-->
          <!--app:above_text_color="@color/white"-->
          <!--app:above_text_size="@dimen/font_main"-->
          <!--app:below_text="@string/user_focus"-->
          <!--app:below_text_color="@color/white"-->
          <!--app:below_text_size="@dimen/font_small" />-->

          <!--<com.chaoneng.ilooknews.app.ui.widget.DoubleTextView-->
          <!--android:id="@+id/tv_credit_fans"-->
          <!--android:layout_width="wrap_content"-->
          <!--android:layout_height="wrap_content"-->
          <!--app:above_text="10"-->
          <!--app:above_text_color="@color/white"-->
          <!--app:above_text_size="@dimen/font_main"-->
          <!--app:below_text="@string/user_fans"-->
          <!--app:below_text_color="@color/white"-->
          <!--app:below_text_size="@dimen/font_small" />-->
          <!--</LinearLayout>-->

          <TextView
              android:id="@+id/tv_focus"
              android:layout_width="64dp"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@id/iv_avatar"
              android:layout_alignParentRight="true"
              android:layout_marginRight="@dimen/padding_normal"
              android:background="@drawable/bg_btn_focus_white"
              android:gravity="center"
              android:text="@string/focus_add"
              android:textColor="@color/white"
              android:textSize="@dimen/font_normal" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/bg_stroke"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_normal"
            android:textColor="@color/two_text_color"
            tools:text="@string/test_text_long" />
      </LinearLayout>

      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:background="@drawable/bg_gradient"
          app:layout_collapseMode="pin"
          style="@style/toolbar" />
    </android.support.design.widget.CollapsingToolbarLayout>
  </android.support.design.widget.AppBarLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:tl_indicator_color="@color/main_color"
        app:tl_indicator_height="2dp"
        app:tl_indicator_margin_bottom="4dp"
        app:tl_indicator_width="@dimen/padding_normal"
        app:tl_tab_width="60dp"
        app:tl_textSelectColor="@color/main_color"
        app:tl_textUnselectColor="@color/three_text_color"
        app:tl_textsize="@dimen/font_main" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />
  </LinearLayout>
</android.support.design.widget.CoordinatorLayout>