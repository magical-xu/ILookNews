<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">

  <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
      android:id="@+id/video_player"
      android:layout_width="match_parent"
      android:layout_height="@dimen/layout_height_video" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <com.chaoneng.ilooknews.widget.image.HeadImageView
        android:id="@+id/iv_avatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="4dp"
        tools:background="#f00" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/gray_deep"
        android:textSize="@dimen/font_normal"
        tools:text="世锋日上" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_normal"
        android:textColor="@color/one_text_color"
        android:textSize="@dimen/font_tiny"
        tools:text="1111次播放" />

    <TextView
        android:id="@+id/tv_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_normal"
        android:drawableLeft="@drawable/ic_profile_talk"
        android:drawablePadding="@dimen/padding_small"
        android:gravity="center"
        android:textColor="@color/one_text_color"
        android:textSize="@dimen/font_tiny"
        tools:text="123" />

    <ImageView
        android:id="@+id/id_focus_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_small"
        android:src="@drawable/ic_share" />
  </LinearLayout>
</LinearLayout>