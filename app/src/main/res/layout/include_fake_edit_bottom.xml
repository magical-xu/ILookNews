<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="vertical">

  <include layout="@layout/include_full_divider" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/padding_normal"
      android:paddingRight="@dimen/padding_normal">

    <TextView
        android:id="@+id/id_bottom_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_editor_gray"
        android:gravity="left"
        android:paddingLeft="@dimen/padding_main"
        android:text="写评论..."
        android:textColor="@color/alpha_50_black" />

    <FrameLayout
        android:id="@+id/id_bottom_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_normal">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:src="@drawable/ic_profile_talk" />

      <TextView
          android:id="@+id/id_bottom_comment_count"
          android:layout_width="wrap_content"
          android:layout_height="10dp"
          android:layout_gravity="right"
          android:background="@drawable/shape_red_point_twenty_dp"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="@dimen/font_smallest"
          android:visibility="visible"
          tools:text="9"
          tools:visibility="visible" />
    </FrameLayout>

    <ImageView
        android:id="@+id/id_bottom_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_main"
        android:src="@drawable/selector_star" />

    <ImageView
        android:id="@+id/id_bottom_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_normal"
        android:src="@drawable/ic_profile_collection"
        android:visibility="gone" />
  </LinearLayout>
</LinearLayout>