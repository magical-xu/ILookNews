<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <FrameLayout
      android:id="@+id/id_main_container"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1" />

  <com.flyco.tablayout.CommonTabLayout
      android:id="@+id/id_main_tab_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/bg_white_gray"
      android:padding="5dp"
      tl:tl_iconHeight="32dp"
      tl:tl_iconWidth="32dp"
      tl:tl_indicator_height="0dp"
      tl:tl_textSelectColor="@color/main_color"
      tl:tl_textUnselectColor="@color/light_gray"
      tl:tl_textsize="12sp"
      tl:tl_underline_height="0dp" />

</LinearLayout>
