<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_button_press"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/padding_normal"
    android:paddingTop="@dimen/padding_normal">

  <TextView
      android:id="@+id/id_item_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/padding_normal"
      android:gravity="center"
      android:textColor="@color/one_text_color"
      android:textSize="@dimen/font_normal"
      tools:text="个人资料" />

  <ImageView
      android:id="@+id/id_item_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="@dimen/padding_normal"
      android:src="@drawable/ic_right_expand" />

  <TextView
      android:id="@+id/id_item_right_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginRight="@dimen/padding_small"
      android:layout_toLeftOf="@id/id_item_arrow"
      android:gravity="center"
      android:textColor="@color/two_text_color"
      android:textSize="@dimen/font_normal"
      android:visibility="gone"
      tools:text="缓存大小 32MB"
      tools:visibility="visible" />

  <ToggleButton
      android:id="@+id/id_item_toggle"
      android:layout_width="30dp"
      android:layout_height="20dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="@dimen/padding_normal"
      android:background="@drawable/selector_setting_switcher"
      android:textOff=""
      android:textOn=""
      android:visibility="gone" />
</RelativeLayout>