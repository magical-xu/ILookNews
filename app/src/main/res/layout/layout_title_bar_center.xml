<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_title_bg"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center_vertical"
      android:paddingLeft="@dimen/padding_small"
      android:paddingRight="@dimen/padding_small">

    <com.aktt.news.widget.image.HeadImageView
        android:id="@+id/iv_circle_left"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        tools:src="@drawable/ic_home_normal"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/iv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingRight="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back_black"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_title_left"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/font_main"
        tools:text="个人"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="10"
        android:maxLines="1"
        android:textSize="@dimen/font_main"
        tools:text="标题"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        tools:src="@drawable/img_focus_title"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_small"
        android:textColor="@color/main_color"
        android:textSize="@dimen/font_main"
        android:visibility="gone"
        tools:text="注册"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/iv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        tools:src="@drawable/ic_care_plus_blue"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_title_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/iv_title_right"
        android:background="@drawable/bg_btn_focus_white"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:text="@string/focus_add"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal"
        android:visibility="gone"
        tools:textColor="@color/black" />

    <com.aktt.news.widget.image.HeadImageView
        android:id="@+id/iv_title_avatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_title_focus"
        android:visibility="gone"
        tools:background="#f00" />
  </RelativeLayout>

  <View
      android:id="@+id/id_divider_bottom"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/main_divider_color" />
</LinearLayout>